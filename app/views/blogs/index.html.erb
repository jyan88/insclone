<br>
<%= link_to '投稿する', new_blog_path,class:"btn-info btn-lg" %><br><br>

<h1>投稿一覧</h1><br>

  <% @blogs.each do |blog| %><br>
    <span><h2><%= blog.user.name %>さん<%= image_tag(blog.user.image , size: 50)  %></h2></span>
    <div class="col-xs-12 col-md-6 box17"><%= blog.user.name %>さんの投稿:<%= blog.content %></div>
      <% if blog.image.present? %>
        <div class="file"><%= image_tag(blog.image.url , size: 200) %></div>
      <% end %>
        <% if @current_user.id == blog.user_id %>
          <div class="col-md-2"><%= link_to "編集する", edit_blog_path(blog.id),data:{ confirm: '本当に編集していいですか？' } %></div>
          <div class="col-md-2"><%= link_to "削除する", blog_path(blog.id), method: :delete,data: { confirm: '本当に削除していいですか？' } %></div>
        <%else%>
          <div class="col-md-2"><%= link_to "お気に入り", blog_path(blog.id) %></div>
        <% end %> 
    <% end %> 